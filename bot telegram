        InlineKeyboardButton("ğŸŒ Buscar PaÃ­s", callback_data="buscar_pais"),
        InlineKeyboardButton("ğŸ’° Carteira", callback_data="carteira"),
        InlineKeyboardButton("ğŸ’  Chave PIX", callback_data="ver_pix")
    )
    if is_admin:
        kb.add(InlineKeyboardButton("âš™ï¸ Painel Administrativo", callback_data="admin"))
    kb.add(InlineKeyboardButton("ğŸ“¢ Canal", url="https://t.me/c/2836352327/3"))
