# ======= VERIFICAÃ‡ÃƒO DE CANAL =======
async def usuario_no_canal(user_id):
    try:
        membro = await bot.get_chat_member(CANAL_ID, user_id)
        return membro.status in ["member", "administrator", "creator"]
    except ChatNotFound:
        return False

# ======= COMANDO /start =======
@dp.message_handler(commands=["start"])
async def start(msg: types.Message):
    c.execute('SELECT * FROM banidos WHERE user_id=?', (msg.from_user.id,))
    if c.fetchone():
        await msg.answer("ğŸš« VocÃª estÃ¡ banido do bot.")
        return

    if await usuario_no_canal(msg.from_user.id):
        c.execute('SELECT * FROM saldo WHERE user_id=?', (msg.from_user.id,))
        if not c.fetchone():
            c.execute('INSERT INTO saldo (user_id, saldo) VALUES (?, ?)', (msg.from_user.id, 0))
            conn.commit()

        c.execute('SELECT * FROM admins WHERE user_id=?', (msg.from_user.id,))
        is_admin = bool(c.fetchone()) or msg.from_user.id == ADMIN_ID

        texto = (
            "ğŸ’³ *TRILUNE STORE - BOT OFICIAL*\n"
            "ğŸ”¥ BÃ”NUS de 50% em recargas acima de R$9,99\n"
            "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n"
            "âœ… CCs testadas na hora\n"
            "ğŸ’³ Infos virgens direto do painel\n"
            "âš¡ Recargas rÃ¡pidas via PIX\n"
            "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”\n"
            "ğŸ“Œ *REGRAS RÃPIDAS:*\n"
            "âŒ Sem estorno de saldo\n"
            "ğŸš« Abuso de bugs = ban\n"
            "âš ï¸ NÃ£o garantimos vÃ­nculo, saldo ou aprovaÃ§Ã£o\n"
            "âœ… Garantimos apenas LIVE no teste\n"
            "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
        )
        await msg.answer(texto, reply_markup=teclado_principal(is_admin))
    else:
        kb = InlineKeyboardMarkup().add(InlineKeyboardButton("ğŸ”— Entrar no Canal", url="https://t.me/c/2836352327/3"))
        await msg.answer("âš ï¸ Para usar o bot, participe do canal primeiro.", reply_markup=kb)

# ======= CALLBACKS =======
@dp.callback_query_handler()
async def callback(call: types.CallbackQuery):
    user_id = call.from_user.id

    # Painel do UsuÃ¡rio
    if call.data == "carteira":
        c.execute('SELECT saldo FROM saldo WHERE user_id=?', (user_id,))
        saldo = c.fetchone()
        saldo = saldo[0] if saldo else 0
        await call.message.answer(f"ğŸ¦ *Carteira:*\nID: `{user_id}`\nğŸ’° Saldo: R$ {saldo:.2f}")

    elif call.data == "ver_pix":
        c.execute('SELECT chave FROM pix')
        resultado = c.fetchone()
        if resultado:
            await call.message.answer(f"ğŸ’³ *Chave PIX para recarga:*\n`{resultado[0]}`\nâš ï¸ ApÃ³s o pagamento, envie o comprovante para o ADM.")
        else:
            await call.message.answer("âš ï¸ Chave PIX ainda nÃ£o cadastrada.")

    elif call.data in ["cc_dados", "cc_full"]:
        tipo = "CC Dados" if call.data == "cc_dados" else "CC Full"
        c.execute('SELECT DISTINCT nivel FROM estoque WHERE tipo=?', (tipo,))
        niveis = c.fetchall()
        if niveis:
            kb = InlineKeyboardMarkup(row_width=2)
            for n in niveis:
                kb.add(InlineKeyboardButton(n[0], callback_data=f"comprar_{tipo}_{n[0]}"))
            kb.add(InlineKeyboardButton("ğŸ”™ Voltar", callback_data="voltar"))
            await call.message.edit_text(f"ğŸ’³ Selecione o nÃ­vel de {tipo}:", reply_markup=kb)
        else:
            await call.message.answer("âš ï¸ Estoque indisponÃ­vel no momento.")

    elif call.data == "buscar_bin":
        await call.message.answer("ğŸ” Envie o BIN (6 ou 8 dÃ­gitos) para pesquisar.")

    elif call.data == "buscar_banco":
        c.execute('SELECT DISTINCT banco FROM estoque')
        bancos = c.fetchall()
        if bancos:
            kb = InlineKeyboardMarkup(row_width=2)
            for b in bancos:
                kb.add(InlineKeyboardButton(b[0], callback_data=f"banco_{b[0]}"))
            kb.add(InlineKeyboardButton("ğŸ”™ Voltar", callback_data="voltar"))
            await call.message.answer("ğŸ¦ Selecione o Banco:", reply_markup=kb)
        else:
            await call.message.answer("âš ï¸ Nenhum Banco disponÃ­vel no estoque.")

    elif call.data == "buscar_pais":
        paises_fixos = ["Brasil", "Portugal", "Argentina", "Espanha", "Angola", "MoÃ§ambique", "Estados Unidos", "FranÃ§a", "ItÃ¡lia", "Alemanha", "SuÃ­Ã§a"]
        kb = InlineKeyboardMarkup(row_width=2)
        for p in paises_fixos:
            c.execute('SELECT COUNT(*) FROM estoque WHERE pais=?', (p,))
            if c.fetchone()[0] > 0:
                kb.add(InlineKeyboardButton(p, callback_data=f"pais_{p}"))
        kb.add(InlineKeyboardButton("ğŸ”™ Voltar", callback_data="voltar"))
        await call.message.answer("ğŸŒ Selecione o PaÃ­s:", reply_markup=kb)

    # Painel Administrativo
    elif call.data == "admin" and (user_id == ADMIN_ID or c.execute('SELECT * FROM admins WHERE user_id=?', (user_id,)).fetchone()):
        await call.message.edit_text("âš™ï¸ *Painel Administrativo*", reply_markup=painel_admin())

    elif call.data == "pix":
        await call.message.answer("ğŸ’³ Envie a nova chave PIX:")

    elif call.data == "gift":
        await call.message.answer("ğŸ Envie o Gift no formato:\ngift_|codigo|valor")

    elif call.data == "add_admin":
        await call.message.answer("ğŸ‘¥ Envie o ID do usuÃ¡rio para adicionar como admin:")

    elif call.data == "rem_admin":
        await call.message.answer("âŒ Envie o ID do admin para remover:")

    elif call.data == "carregar":
        await call.message.answer("â• Envie os cartÃµes no formato:\nbin|banco|pais|nivel|tipo|dados")

    elif call.data == "banir":
        await call.message.answer("ğŸ‘¤ Envie o ID do usuÃ¡rio para banir:")

    elif call.data == "add_saldo":
        await call.message.answer("ğŸ’° Envie no formato:\nsaldo_|id_usuario|valor")

    elif call.data == "ver_estoque":
        c.execute('SELECT COUNT(*) FROM estoque')
        total = c.fetchone()[0]
        await call.message.answer(f"ğŸ“¦ CartÃµes em estoque: {total}")

    elif call.data == "voltar":
        c.execute('SELECT * FROM admins WHERE user_id=?', (user_id,))
        is_admin = bool(c.fetchone()) or user_id == ADMIN_ID
        await call.message.edit_text("Menu Principal:", reply_markup=teclado_principal(is_admin))

# ======= RODANDO O BOT =======
if __name__ == "__main__":
    executor.start_polling(dp, skip_updates=True)
